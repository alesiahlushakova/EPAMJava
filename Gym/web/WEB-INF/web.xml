<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>/jsp/main.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <location>/jsp/error.jsp</location>
    </error-page>



    <servlet>
        <servlet-name>controller</servlet-name>
        <servlet-class>by.training.gym.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>


    <jsp-config>
        <taglib>
            <taglib-uri>tag</taglib-uri>
            <taglib-location>/WEB-INF/tld/tag.tld</taglib-location>
        </taglib>
    </jsp-config>

    <filter>
        <description>Encoding parameter to UTF-8</description>
        <filter-name>UTF</filter-name>
        <filter-class>by.training.gym.controller.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encodingType</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>UTF</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>SecurityPageRedirect</filter-name>
        <filter-class>by.training.gym.controller.filter.PageSecurityFilter</filter-class>
        <init-param>
            <param-name>MAIN_PAGE</param-name>
            <param-value>/jsp/main.jsp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SecurityPageRedirect</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>PageDatabaseRecord</filter-name>
        <filter-class>by.training.gym.controller.filter.CleanRecordFlagFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PageDatabaseRecord</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>SecurityCommand</filter-name>
        <filter-class>by.training.gym.controller.filter.CommandSecurityFilter</filter-class>
        <init-param>
            <param-name>MAIN_PAGE</param-name>
            <param-value>/jsp/main.jsp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SecurityCommand</filter-name>
        <url-pattern>/controller</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>DataBaseRecord</filter-name>
        <filter-class>by.training.gym.controller.filter.DbRecordFilter</filter-class>
        <init-param>
            <param-name>REDIRECT_PAGE</param-name>
            <param-value>/jsp/main.jsp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>DataBaseRecord</filter-name>
        <url-pattern>/controller</url-pattern>
    </filter-mapping>

</web-app>