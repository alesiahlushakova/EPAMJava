<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.w3.org/2001/XMLSchema"
        targetNamespace="http://www.example.com/Medicines"
        xmlns:tns="http://www.example.com/Medicines"
        elementFormDefault="qualified">


    <element name="Medicines">
        <complexType>
            <sequence>
                <element ref="tns:Medicine" maxOccurs="unbounded"/>
            </sequence>
        </complexType>
    </element>

    <!-- entities -->
    <element name="Medicine"   type="tns:Medicine"   abstract="true"/>
    <element name="Antibiotic" type="tns:Antibiotic" substitutionGroup="tns:Medicine"/>
    <element name="Vitamin"    type="tns:Vitamin"    substitutionGroup="tns:Medicine"/>
    <element name="Analgetic"  type="tns:Analgetic"  substitutionGroup="tns:Medicine"/>

    <!-- type definition for abstract Medicine  -->
    <complexType name="Medicine">
        <sequence>
            <element name="Pharm" type="string"/>
            <element name="Version" type="tns:Version" minOccurs="1" maxOccurs="unbounded"/>
        </sequence>
        <attribute name="name" use="required">
            <simpleType>
                <restriction base="string">
                    <whiteSpace value="collapse"/>
                </restriction>
            </simpleType>
        </attribute>
        <attribute name="CAS" use="required">
            <simpleType>
                <restriction base="string">
                    <pattern value="([0-9]{2,5})-([0-9]{2})-([0-9]{1})"/>
                </restriction>
            </simpleType>
        </attribute>
        <attribute name="drug_bank" use="required">
            <simpleType>
                <restriction base="ID">
                    <pattern value="DB([0-9]{5})"/>
                </restriction>
            </simpleType>
        </attribute>
    </complexType>

    <!--  Antibiotic element -->
    <complexType name="Antibiotic">
        <complexContent>
            <extension base="tns:Medicine">
                <attribute name="recipe" type="boolean" default="true"/>
            </extension>
        </complexContent>
    </complexType>

    <!-- Vitamin element -->
    <complexType name="Vitamin">
        <complexContent>
            <extension base="tns:Medicine">
                <attribute name="solution" use="optional">
                    <simpleType>
                        <restriction base="string">
                            <enumeration value="water"/>
                            <enumeration value="fat"/>
                        </restriction>
                    </simpleType>
                </attribute>
            </extension>
        </complexContent>
    </complexType>

    <!--  Analgetic element -->
    <complexType name="Analgetic">
        <complexContent>
            <extension base="tns:Medicine">
                <attribute name="narcotic" type="boolean" use="required"/>
            </extension>
        </complexContent>
    </complexType>

    <!--  Version element -->
    <complexType name="Version">
        <sequence>
            <element name="Producer" type="string"/>
            <element name="Form">
                <simpleType>
                    <restriction base="string">
                        <enumeration value="tablet"  />
                        <enumeration value="pills" />
                        <enumeration value="powder"/>
                        <enumeration value="liquid"/>
                    </restriction>
                </simpleType>
            </element>
            <element name="Certificate" type="tns:Certificate"/>
            <element name="Package" type="tns:Package" minOccurs="1" maxOccurs="unbounded"/>
            <element name="Dosage" type="tns:Dosage"/>
        </sequence>
        <attribute name="analog" type="string" use="required"/>
    </complexType>

    <!-- tCertificate element -->
    <complexType name="Certificate">
        <sequence>
            <element name="Registered_by" type="string"/>
            <element name="Registration_date">
                <simpleType>
                    <restriction base="date">
                        <minInclusive value="2000-01-01"/>
                    </restriction>
                </simpleType>
            </element>
            <element name="Expiration_date">
                <simpleType>
                    <restriction base="date">
                        <maxInclusive value="2029-01-01"/>
                    </restriction>
                </simpleType>
            </element>
        </sequence>
    </complexType>

    <!-- Package element -->
    <complexType name="Package">
        <sequence>
            <element name="Quantity" type="positiveInteger"/>
            <element name="Price"  type="double"/>
        </sequence>
        <attribute name="size" use="optional">
            <simpleType>
                <restriction base="string">
                    <enumeration value="small"></enumeration>
                    <enumeration value="medium"></enumeration>
                    <enumeration value="large"></enumeration>
                </restriction>
            </simpleType>
        </attribute>
    </complexType>

    <!-- Dosage element -->
    <complexType name="Dosage">
        <sequence>
            <element name="Amount" type="string"/>
            <element name="Frequency" type="string"/>
        </sequence>
    </complexType>
</schema>